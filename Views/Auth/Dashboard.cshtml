@{
  ViewData["Title"] = "儀表板";
  Layout = "_Layout";
}

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header bg-success text-white">
          <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">歡迎回來，@ViewBag.UserName！</h4>
            <form asp-action="Logout" method="post" style="display: inline;">
              <button type="submit" class="btn btn-outline-light btn-sm">登出</button>
            </form>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h5>用戶資訊</h5>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <strong>帳號：</strong> @ViewBag.UserId
                </li>
                <li class="list-group-item">
                  <strong>姓名：</strong> @ViewBag.UserName
                </li>
                <li class="list-group-item">
                  <strong>登入時間：</strong> @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")
                </li>
              </ul>
            </div>
            <div class="col-md-6">
              <h5>快速功能</h5>
              <div class="d-grid gap-2">
                <a href="/Users" class="btn btn-primary">用戶管理</a>
                <a href="/Home" class="btn btn-secondary">首頁</a>
                <button class="btn btn-info" onclick="showUserInfo()">查看詳細資訊</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function showUserInfo() {
    alert('用戶詳細資訊功能將在後續版本中實現');
  }
</script>