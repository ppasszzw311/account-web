@model account_web.Models.User

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-key"></i> 修改密碼
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="ChangePassword" method="post">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Name" />
            <input type="hidden" asp-for="FactoryId" />
            <input type="hidden" asp-for="CreatedAt" />
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="CurrentPassword" class="form-label">目前密碼</label>
                    <input type="password" id="CurrentPassword" name="CurrentPassword" class="form-control" placeholder="請輸入目前密碼" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label for="NewPassword" class="form-label">新密碼</label>
                    <input type="password" id="NewPassword" name="NewPassword" class="form-control" placeholder="請輸入新密碼" required />
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="ConfirmPassword" class="form-label">確認新密碼</label>
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="請再次輸入新密碼" required />
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-key"></i> 更新密碼
                </button>
            </div>
        </form>
    </div>
</div> 