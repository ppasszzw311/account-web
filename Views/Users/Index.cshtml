@model IEnumerable<account_web.Models.User>

@{
    ViewData["Title"] = "使用者管理";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>@ViewData["Title"]</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> 新增使用者
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                                        <th>@Html.DisplayNameFor(model => model.UserId)</th>
                                        <th>@Html.DisplayNameFor(model => model.FactoryId)</th>
                                        <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                                            <td>@Html.DisplayFor(modelItem => item.FactoryId)</td>
                                            <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-userId="@item.UserId" class="btn btn-info btn-sm">
                                                        <i class="fas fa-eye"></i> 詳細
                                                    </a>
                                                    <a asp-action="Edit" asp-route-userId="@item.UserId" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i> 編輯
                                                    </a>
                                                    <a asp-action="Delete" asp-route-userId="@item.UserId" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i> 刪除
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">尚無使用者資料</h4>
                            <p class="text-muted">點擊上方的「新增使用者」按鈕來建立第一個使用者</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
